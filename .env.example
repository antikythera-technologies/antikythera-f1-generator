# ===========================================
# Antikythera F1 Video Generator Configuration
# ===========================================

# Application
APP_NAME=antikythera-f1-generator
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database (PostgreSQL)
DATABASE_HOST=postgres.antikythera.co.za
DATABASE_PORT=5432
DATABASE_NAME=antikythera-f1-generator
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_URL=postgresql+asyncpg://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# MinIO Object Storage
MINIO_ENDPOINT=minio.antikythera.co.za:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_SECURE=true

# MinIO Buckets
MINIO_BUCKET_CHARACTERS=f1-characters
MINIO_BUCKET_SCENE_IMAGES=f1-scene-images
MINIO_BUCKET_VIDEO_CLIPS=f1-video-clips
MINIO_BUCKET_FINAL_VIDEOS=f1-final-videos

# Anthropic (Claude Haiku)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.8

# Gemini / Imagen (Image Generation)
# Get API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=
GEMINI_IMAGE_MODEL=imagen-4.0-generate-001
GEMINI_IMAGE_RESOLUTION=1024x1024

# Ovi (HuggingFace Gradio) - Video Generation
# Get HuggingFace token from: https://huggingface.co/settings/tokens
# Token is REQUIRED for reliable access to Ovi ZEROGPU space
OVI_SPACE=alexnasa/Ovi-ZEROGPU
OVI_TIMEOUT_SECONDS=300
OVI_QUALITY=standard  # draft (fast), standard, high, ultra (slow)
HUGGINGFACE_TOKEN=

# YouTube API
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_CREDENTIALS_PATH=~/.credentials/antikythera-f1/youtube_credentials.json

# Redis (optional - for job queue)
REDIS_URL=redis://localhost:6379/0

# Video Generation Settings
VIDEO_SCENE_COUNT=24
VIDEO_SCENE_DURATION_SECONDS=5
VIDEO_TOTAL_DURATION_SECONDS=120
VIDEO_FRAME_RATE=24
VIDEO_RESOLUTION=1080p
VIDEO_CODEC=libx264
VIDEO_AUDIO_CODEC=aac
VIDEO_CRF=23

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_SECONDS=5
RETRY_MAX_DELAY_SECONDS=300

# Storage Retention
STORAGE_RETENTION_RACES=3

# Scheduling
TRIGGER_CHECK_INTERVAL_MINUTES=15
PRE_RACE_DELAY_MINUTES=30
POST_RACE_DELAY_MINUTES=60
